{
  "name": "krpc-base",
  "version": "1.0.0",
  "description": "KRPC base interface, just interface & utils , no impl, no dependencies",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "format": "prettier --write \"src/**/*.*s\"",
    "prebuild": "npm run format",
    "build": "tsc  -p ./tsconfig.nocomments.json",
    "postbuild": "tsc && copyfiles -u 1 dist.d/index.d.ts dist/",
    "test": "jest --coverage --ci --reporters=default --reporters=jest-junit --detectOpenHandles"
  },
  "keywords": [
    "grpc",
    "krpc-base"
  ],
  "author": "martin.cong",
  "license": "UNLICENSED",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@tsconfig/recommended": "^1.0.8",
    "@types/jest": "^27.5.2",
    "@types/node": "^20.17.14",
    "copyfiles": "^2.4.1",
    "jest": "^27.5.1",
    "jest-junit": "^13.2.0",
    "prettier": "^2.8.8",
    "ts-jest": "^27.1.5",
    "typescript": "^5.7.3"
  }
}
